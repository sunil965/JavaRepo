package list;

import java.util.*;
import java.util.Scanner;

public class CheckPalindrome {

	public static void main(String[] args) 
	{
	    CheckPalindrome object = new CheckPalindrome();
		Deque list = new LinkedList();
		Scanner scan = new Scanner(System.in);
		
		System.out.println("Enter any string.");
		String userInput = scan.next();
		object.isPalindrome(userInput);
	}

    public void isPalindrome(String input)
     {
	  for(int i=0;i<userInput.length(); i++)
		{			
			list.add(userInput.charAt(i));			
		}
		 String reverse = "";
		while(!list.isEmpty())
		{
			reverse += list.removeLast();			
		}
		if(userInput.equals(reverse))
		   System.out.println(userInput+" is palindrome");
		else
			System.out.println(userInput+" is not palindrome.");
  }
}
