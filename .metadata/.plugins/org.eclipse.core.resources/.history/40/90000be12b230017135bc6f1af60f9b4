public class Triplet
{
  public static void main(String[] args)
 {
    int counter = 0;
    int[] numbers = {1,-1,4,2,-6};
    for(int i=0; i<numbers.length; i++)
	{
	 for(int j=0; j<numbers.length; j++)
	{
	 for(int k=0; k<numbers.length; k++)
	    {
		if((numbers[i]+numbers[j]+numbers[k])==0)
		 {System.out.println("Sunm of "+numbers[i]+","+numbers[j]+"and "+numbers[k]+" is 0.");
               counter++;}
	    }	
	}	
       }
    System.out.println("Toatal numbers of triplets in the given array = "+counter);
 }
}










/*else	 System.out.println("Non triplet !!");*/
