import java.util.Scanner;


public class Frog {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.println("Enter height of wall.");
		int wallHeight = scanner.nextInt();
		
		System.out.println("How long frog jumps ?");
		int jumpLength = scanner.nextInt();
		int travel = 0;
		int slip = 0;
		int count = 0;
		for(int i=0; i<wallHeight; i++){
			jumpLength +=travel;
			slip = jumpLength - 1;
			travel = jumpLength-slip;
//			count++;
			if(travel==wallHeight){
				break;
			}
		}
		System.out.println("Total jupms requires = "+travel);
		
	}

}
