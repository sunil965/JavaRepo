package com.bridgelabz.controller;

import java.io.File;
import java.io.FileInputStream;
import java.util.Arrays;
import java.util.Scanner;

public class AddressController {
    
	Service addressBook = new AddressBook();

	public void addToBook(String key){
		addressBook.addPerson(key);
	}
	
	public void deleteFromBook(String key){
		addressBook.delete(key);
	}
	
	public void displayAddressBook(String key){
		addressBook.printList(key);
	}
	
	public void editAddressBook(String key){
		addressBook.edit(key);
	}
	
	public void sortByLastNameBook(String key){
		addressBook.sortByLastName(key);
	}
	
	public void sortByZIP(String key){
		addressBook.sortByLastZIP(key);
	}


}
