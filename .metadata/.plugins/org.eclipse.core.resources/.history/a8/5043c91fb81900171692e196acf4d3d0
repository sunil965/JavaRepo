	  public  void binarySearch(String array[], String value)
	  {
	      int first = 0;
	      int last = array.length - 1;
	      int mid = first + (last - first)/2;
			while(first <= last)
			{	
				if(array[mid].compareTo(value)<0)
					last = mid-1; 
				else if(array[mid].compareTo(value)==0)
				  {  System.out.println(value + " found at location " + (mid + 1) + ".");
        	 	     break;
        	      }				
			    else{
			          first = mid+1;
			          mid = (first + last)/2;;
			        }
			 }
			if ( first > last )
		         System.out.println(value + " is not found.\n");
		    	
	   }

}
