package com.bridgelabz.java;

import java.io.File;
import java.io.FileReader;
import java.util.*;

import org.json.simple.JSONArray;
import org.json.simple.JSONObject;
import org.json.simple.parser.JSONParser;

public class DataInventory {

	public static void main(String[] args) {
		
		     JSONParser parser = new JSONParser();
		     Iterator iterator;
		try {
			Object object = parser.parse(new FileReader("/home/bridgeit/JavaRepo/Java/src/JSON.txt"));
			JSONObject jsonObj = (JSONObject) object;
			
//			System.out.println(jsonObj);
            JSONArray Rice = (JSONArray) jsonObj.get("Rice"); 
            System.out.println("\nRice Details:\n");
            iterator = Rice.iterator();
            while (iterator.hasNext()) {
                System.out.println(iterator.next());
            }
            
            JSONArray wheat = (JSONArray) jsonObj.get("Wheat");
            System.out.println("\nWheat Detals.\n");
            iterator = wheat[0].iterator();
            while (iterator.hasNext()) {
				System.out.println(iterator.next());				
			}
            
            JSONArray pulse = (JSONArray) jsonObj.get("Pulse");
            System.out.println("\nPulse Details.\n");
            iterator = pulse.iterator();
            while (iterator.hasNext()) {
				System.out.println(iterator.next());				
			}
		} catch (Exception e) {
			e.getMessage();
		}

	}

}
