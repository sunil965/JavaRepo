package bank.cash.counter;

import java.util.ArrayList;
import java.util.Scanner;

public class Bank {

	double bankBalance = 50000;
	Scanner scan = new Scanner(System.in);
	
	static ArrayList list = new ArrayList();
	
	@SuppressWarnings("resource")
	public static void main(String[] args)
	{
	 System.out.println("Customers in line ?");
	 int listSize = new Scanner(System.in).nextInt();
	 
	 for(int i=1; i<=listSize; i++)
	 {
		 System.out.println("Customer Name");
		 String name = new Scanner(System.in).next();
		 System.out.println("Transaction Amount");
		 double amount = new Scanner(System.in).nextDouble();		 
		 Customer customer = new Customer(name, amount);
		 list.add(customer);
	 }
	 
	 Bank bank = new Bank();
	 System.out.println("Cash in Bank : "+ bank.bankBalance+"\n");
	 bank.transaction(list);
	}
	
	public void transaction(ArrayList list)
	{
	  for(int i=0;i<list.size();i++)
	  {
	      Customer customer=(Customer) list.get(i);
		  System.out.println("What you want Withdraw or Deposite");
		  String operation = scan.next();
		  if(operation.equalsIgnoreCase("deposite"))
		  {
			  bankBalance = bankBalance +customer.getAmount();
			  System.out.println("Bank Account Credited by customer "+customer.getName()+" : "+ bankBalance);
			  Double balance= customer.getBalance()+customer.getAmount();
			  System.out.println(customer.getName()+" present balance is : "+balance);
		  }
		  else
		  {
			  bankBalance = bankBalance - customer.getAmount();
			  System.out.println("Bank Account Debited by customer "+customer.getName()+" : "+ bankBalance);
			  Double balance= customer.getBalance()-customer.getAmount();
			  System.out.println(customer.getName()+" present balance is : "+balance);
		  }
	  }
	}
	
}
